extends layout

block content
	p#pagetitle
		| Register
		
	form(role='form', action='/register', method='post', style='max-width: 400px;')
		.form-group
			input.form-control(type='text', name='username', placeholder='Enter Username')
		.form-group
			input.form-control(type='password', name="password", placeholder='Password')
		button.buttons(type='submit') Submit
		&nbsp;
		a(href='/')
			button.buttons.buttonsinv(type="button") Cancel	
	br
	h4= info
